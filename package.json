{
    "name": "terraform-completer",
    "displayName": "Terraform Completer",
    "description": "Autocomplete for terraform resources and modules.",
    "version": "0.1.0",
    "publisher": "mgtrrz",
    "repository": {
        "type": "git",
        "url": "https://github.com/mgtrrz/terraform-completer"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "capabilities": {
        "completionProvider": {
            "resolveProvider": "true",
            "triggerCharacters": [
                "."
            ]
        }
    },
    "activationEvents": [
        "onLanguage:terraform"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "terraform",
                "aliases": [
                    "Terraform",
                    "terraform"
                ],
                "extensions": [
                    ".tf",
                    ".tfvars",
                    ".hcl"
                ],
                "configuration": "./terraform.configuration.json"
            }
        ],
        "configuration": {
            "title": "Terraform-Completer",
            "properties": {
                "terraform.terraformrc_file_path": {
                    "type": "string",
                    "scope": "resource",
                    "default": "~/.terraformrc",
                    "description": "Path to your .terraformrc file, used for accessing the API key and querying the registry API."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.14.13",
        "mocha": "^2.3.3",
        "typescript": "^3.5.1",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "@types/axios": "^0.14.0",
        "lodash": "^4.17.4"
    }
}
