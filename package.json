{
    "name": "terraform-completer",
    "displayName": "Terraform Completer",
    "description": "Autocomplete for terraform resources and modules.",
    "version": "0.1.0",
    "publisher": "mgtrrz",
    "repository": {
        "type": "git",
        "url": "https://github.com/mgtrrz/terraform-completer"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "capabilities": {
        "completionProvider": {
            "resolveProvider": "true",
            "triggerCharacters": [
                "."
            ]
        }
    },
    "activationEvents": [
        "onLanguage:terraform"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "terraform",
                "aliases": [
                    "Terraform",
                    "terraform"
                ],
                "extensions": [
                    ".tf",
                    ".tfvars",
                    ".hcl"
                ],
                "configuration": "./terraform.configuration.json"
            }
        ],
        "configuration": {
            "title": "Terraform-Completer",
            "properties": {
                "terraform.terraformrc_file_path": {
                    "type": "string",
                    "scope": "resource",
                    "default": "~/.terraformrc",
                    "description": "Path to your .terraformrc file, used for accessing the API key and querying the registry API."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.1.5"
    },
    "dependencies": {
        "@types/axios": "^0.14.0",
        "@types/open": "^6.2.1",
        "lodash": "^4.17.4",
        "vscode-cache": "^0.3.0"
    }
}
